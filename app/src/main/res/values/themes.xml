<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Tropics_App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/darkgray</item>
        <item name="colorPrimaryVariant">@color/gray</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/darkgray</item>

        <!-- Background and surface colors -->
        <item name="colorSurface">@color/gray</item> <!-- Correct surface attribute -->

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/darkgray</item>
        <item name="android:navigationBarColor">@color/darkgray</item>

        <!-- Use white text on buttons, etc. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>
