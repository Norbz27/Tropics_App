<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission"
            android:fontFamily="@font/manrope"
            android:textSize="22sp"
            android:textColor="@color/orange" />
        <TextView
            android:id="@+id/tvFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/manrope"
            android:textSize="17sp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <CheckBox android:id="@+id/chkb_edit_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Action"
                android:fontFamily="@font/manrope"
                android:textSize="14sp"
                android:textColor="#B6B6B6" />

            <CheckBox android:id="@+id/chkb_delete_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Action"
                android:fontFamily="@font/manrope"
                android:textSize="14sp"
                android:textColor="#B6B6B6" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary Computation"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/manrope"
            android:textSize="17sp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <CheckBox android:id="@+id/chkb_edit_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Action"
                android:fontFamily="@font/manrope"
                android:textSize="14sp"
                android:textColor="#B6B6B6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="right"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_background_3"
            android:text="Save"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
