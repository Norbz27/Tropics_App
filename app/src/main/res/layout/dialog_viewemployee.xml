<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/dialog_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <!-- Employee Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgemp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_image_placeholder"
                android:contentDescription="Employee Image"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/empname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Name: John Doe"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/empadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/manrope"
                    android:text="Address: 123 Main St, City"
                    android:textColor="#B6B6B6"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/empphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/manrope"
                    android:text="Phone: (123) 456-7890"
                    android:textColor="#B6B6B6"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/empemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/manrope"
                    android:text="Email: johndoe@example.com"
                    android:textColor="#B6B6B6"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Salary and Commission Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Salary Information"
            android:textColor="@color/orange"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/empsal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="12dp"
            android:fontFamily="@font/manrope"
            android:text="Daily Salary: $500"
            android:textColor="#B6B6B6"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/empcomm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="12dp"
            android:fontFamily="@font/manrope"
            android:text="Commission: $100"
            android:textColor="#B6B6B6"
            android:textSize="15sp"/>

        <!-- Add some padding at the bottom for better scrolling experience -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
</ScrollView>
