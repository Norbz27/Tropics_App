<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121315"
    tools:context=".PayrollHistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Employee..."
                android:inputType="text"
                android:fontFamily="@font/manrope"
                android:background="@drawable/custom_background"
                android:drawableEnd="@android:drawable/ic_menu_search"
                android:dropDownHeight="300dp"
                android:textColor="@color/white"
                android:textColorHint="#ABABAB"
                android:padding="10dp" />

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/month_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/year_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/week_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/l9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="left"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/custom_background_3"
                    android:text="Search"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">
                <TableLayout
                    android:id="@+id/tblHandler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="*">

                    <!-- Table Header -->
                    <TableRow android:background="@color/gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Client Name"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Services"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Commission"
                            android:textColor="@android:color/white"
                            android:padding="5dp"
                            android:fontFamily="@font/manrope_bold" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Employee Commission"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:fontFamily="@font/manrope"
                android:textStyle="bold" />

            <!-- Wrap the table in a HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <TableLayout
                    android:id="@+id/tblWeekly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow android:background="@color/gray">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="MONDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="TUESDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="WEDNESDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="THURSDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="FRIDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="SATURDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="SUNDAY"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Total Commission"
                            android:textColor="@color/orange" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="Final Salary Computation"
                android:textColor="@color/orange"
                android:fontFamily="@font/manrope"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/tblSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow android:background="@color/gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Per Day"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="No. of Days"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Week Salary"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Late/UT or \nComm Deduction"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Deducted Salary"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Comm"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Total Salary"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="CA Deduction"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Overall Salary"
                            android:textColor="@color/orange" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:id="@+id/progressContainer1">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.ProgressBar.Large"
                    android:indeterminate="true"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>