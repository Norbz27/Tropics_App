<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121315"
    tools:context=".SalesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDaily"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:background="@drawable/button_daily_checked"
                android:padding="10dp"
                android:layout_marginEnd="-1dp"/>

            <Button
                android:id="@+id/btnMonthly"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:background="@drawable/button_monthly"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_above="@+id/relativeLayout"
            android:layout_below="@id/l1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="158dp"
            android:background="@drawable/custom_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/tvHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/manrope"
                android:text="Highest Sales: P1000.00"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tvHigh"
                android:fontFamily="@font/manrope"
                android:gravity="right"
                android:text="Lowest Sales: P1000.00"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHigh"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_background"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:text="P1000.00"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tvAveLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAverage"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Average Sales"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
