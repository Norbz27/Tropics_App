<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121315"
    tools:context=".SalesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/date_filter_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Daily Sales Report Table"
                        android:textColor="@color/orange"
                        android:layout_marginBottom="20dp"
                        android:textSize="18sp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/date_picker"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:hint="06/02/2024"
                            android:fontFamily="@font/manrope"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="@color/sub_text"
                            android:focusable="false"
                            android:textColorHint="@color/sub_text"
                            android:clickable="true"
                            android:textColor="@color/sub_text"
                            android:background="@drawable/custom_background"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/day_of_Week"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:hint="N/A"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:fontFamily="@font/manrope"
                            android:drawableTint="@color/sub_text"
                            android:textColorHint="@color/sub_text"
                            android:textColor="@color/sub_text"
                            android:background="@drawable/custom_background"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">
                    <!-- Table for Sales Data -->
                    <TableLayout
                        android:id="@+id/tblayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:stretchColumns="*">

                        <!-- Table Header -->
                        <TableRow android:background="@color/gray">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Services"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Handler"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Commission"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">
                    <!-- Table for Sales Data -->
                    <TableLayout
                        android:id="@+id/tblayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:stretchColumns="*">
                        <!-- Table Header -->
                        <TableRow android:background="@color/gray">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Employee Name"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sales"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commission"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/tvTherapist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Therapist Commission"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5dp">
                    <!-- Table for Sales Data -->
                    <TableLayout
                        android:id="@+id/tblTherapist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp">
                        <!-- Table Header -->
                        <TableRow android:background="@color/gray">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Employee Name"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sales"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commission"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvGcash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Gcash Payments"
                            android:layout_gravity="center"
                            android:textColor="@color/orange"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp" />
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="horizontal"
                            android:layout_gravity="center"
                            android:paddingHorizontal="5dp">
                            <!-- Table for Sales Data -->
                            <TableLayout
                                android:id="@+id/tblGcash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="50dp">
                                <!-- Table Header -->
                                <TableRow android:background="@color/gray">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Client Name"
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Amount"
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                </TableRow>
                            </TableLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Expenses"
                            android:layout_gravity="center"
                            android:textColor="@color/orange"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp" />
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="horizontal"
                            android:layout_gravity="center"
                            android:paddingHorizontal="5dp">
                            <!-- Table for Sales Data -->
                            <TableLayout
                                android:id="@+id/tblExpenses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="50dp">
                                <!-- Table Header -->
                                <TableRow android:background="@color/gray">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Description"
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Amount"
                                        android:textColor="@android:color/white"
                                        android:padding="5dp"
                                        android:fontFamily="@font/manrope_bold" />
                                </TableRow>
                            </TableLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvAddFunds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Additional Funds"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5dp">
                    <!-- Table for Sales Data -->
                    <TableLayout
                        android:id="@+id/tblAddFunds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp">
                        <!-- Table Header -->
                        <TableRow android:background="@color/gray">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textColor="@android:color/white"
                                android:padding="5dp"
                                android:fontFamily="@font/manrope_bold" />
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/tvTEGD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Total with Expenses &amp; Gcash Deduction"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">
                    <!-- Table for Sales Data -->
                    <TableLayout
                        android:id="@+id/tblayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp">
                        <!-- Table Header -->
                        <TableRow android:background="@color/gray">

                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
                <!-- Button Group -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Sales Chart"
                    android:textColor="@color/orange"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnDaily"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-1dp"
                        android:background="@drawable/button_daily_checked"
                        android:padding="10dp"
                        android:text="Daily" />

                    <Button
                        android:id="@+id/btnMonthly"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_monthly"
                        android:padding="10dp"
                        android:text="Monthly" />
                </LinearLayout>

                <!-- Spinner Group -->
                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/month_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/year_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- LineChart Section -->
                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/custom_background"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:visibility="gone">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Switch" />
                </LinearLayout>

                <!-- Average Sales Section -->
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/manrope"
                        android:text="Highest Sales: P1200.00"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/manrope"
                        android:gravity="right"
                        android:text="Lowest Sales: P100.00"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvHigh"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background"
                        android:fontFamily="@font/manrope_bold"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="10dp"
                        android:text="P500.00"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tvAveLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvAverage"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="Average Sales"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddFunds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="170dp"
        android:backgroundTint="@color/orange"

        app:maxImageSize="45dp"
        app:srcCompat="@drawable/baseline_add_24" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGcash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/orange"
        app:fabSize="normal"
        app:maxImageSize="45dp"
        app:srcCompat="@drawable/icons8_gcash" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        app:srcCompat="@drawable/outline_horizontal_rule_24"
        android:backgroundTint="@color/orange"
        app:maxImageSize="30dp"
        android:tint="@color/white"
        app:fabSize="normal" />
</FrameLayout>
